[Unit]
Description=Flower Service
After=network.target

[Service]
User=celery
Group=celery
EnvironmentFile=/opt/ding12306/service/flower.conf
ExecStart=/bin/sh -c '${FLOWER_BIN} -A ${FLOWER_APP} --address=${FLOWER_ADDRESS} --port=${FLOWER_PORT} --broke=${FLOWER_BROKE} --log-file-prefix=${FLOWER_LOG_FILE_PREFIX}'
[Install]
WantedBy=multi-user.target